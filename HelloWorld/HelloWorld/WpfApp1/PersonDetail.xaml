<Window x:Class="WpfApp1.PersonDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Detail osoby" Height="300" Width="300">
    <StackPanel x:Name="PersonDetail1" Orientation="Vertical">
        <Label FontSize="18" Margin="5,0,0,0">Jméno:</Label>
        <TextBox x:Name="txtFirstName" FontSize="18" Margin="30,0,30,0"></TextBox>
        <Label FontSize="18" Margin="5,15,0,0">Příjmení:</Label>
        <TextBox x:Name="txtLastName" FontSize="18" Margin="30,0,30,0"></TextBox>
        <Label FontSize="18" Margin="5,15,0,0">Datum narození:</Label>
        <TextBox x:Name="txtDateOfBirth" FontSize="18" Margin="30,0,30,0"></TextBox>
        <Button x:Name="btnSave" Content="Ulož" Margin="100,28,100,0" FontWeight="Bold" FontSize="14" Click="btnSave_Click"/>


    </StackPanel>
</Window>
